                <Label fx:id="ownerLabel" text="Label">
                    <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Consolas" size="15.0" />
                    </font>
                </Label>
            </children>
        </HBox>
