                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox style="-fx-background-color: lightgrey;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleBackAction" prefHeight="31.0" prefWidth="67.0" text="Back">
                            <font>
                                <Font name="Consolas" size="15.0" />
