                                <Insets left="5.0" top="7.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="entryTitleInput" maxWidth="1.7976931348623157E308" prefHeight="28.0" prefWidth="524.0" promptText="title" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Consolas" size="15.0" />
                            </font>
